<div class="mt-4">
    <h3>Sửa thông tin cảm biến</h3>
<form method="POST" action="/sensors/{{sensor._id}}?_method=PUT">
  <div class="form-group">
    <label for="name">Tên</label>
    <input type="text" class="form-control" value="{{sensor.name}}" id="name" name="name">
  </div>
  
   <div class="form-group">
    <label for="description">Mô tả</label>
    <textarea class="form-control" id="description" name="description">{{sensor.description}}</textarea>
  </div>

   <div class="form-group">
    <label for="donvi">Đơn vị</label>
    <input type="text" class="form-control" value="{{sensor.donvi}}"id="donvi" name="donvi">
  </div>
  <div class="form-group">
    <label for="videoId">Id video youtube</label>
    <input type="text" class="form-control" value="{{sensor.videoId}}"id="videoId" name="videoId">
  </div>
  <div class="form-group">
    <label for="diadiem">Địa điểm</label>
    <input type="text" class="form-control" value="{{sensor.diadiem}}"id="diadiem" name="diadiem">
  </div>
  <div class="form-group">
    <label for="tsmax">Giới hạn cảnh báo trên</label>
    <input type="text" class="form-control" value="{{sensor.tsmax}}" id="tsmax" name="tsmax">
  </div>
  <div class="form-group">
    <label for="tsmin">Giới hạn cảnh báo dưới</label>
    <input type="text" class="form-control" value="{{sensor.tsmin}}"id="tsmin" name="tsmin">
  </div>
  
  <button type="submit" class="btn btn-primary">Thay đổi</button>
</form>

</div>